{
  "manifest_version": 3,
  "name": "Vendor Workflow Enhancer",
  "version": "1.0.0",
  "description": "Enhances vendor workflow table with DONE BY column, filtering, data copying, and row highlighting",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://powertrack3.aptaracorp.com/*",
    "https://powertrack4.aptaracorp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://powertrack3.aptaracorp.com/AptaraVendorAPI/vendorWorkflow.html",
        "https://powertrack4.aptaracorp.com/AptaraVendorAPI/vendorWorkflow.html"
      ],
      "js": [
        "utils.js",
        "apiService.js",
        "tableManager.js",
        "filterManager.js",
        "copyManager.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  }
}

