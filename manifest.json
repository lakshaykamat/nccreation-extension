{
  "manifest_version": 3,
  "name": "Flowers",
  "version": "1.1.0",
  "description": "Flowers for you",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://powertrack3.aptaracorp.com/*",
    "https://powertrack4.aptaracorp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://powertrack3.aptaracorp.com/AptaraVendorAPI/vendorWorkflow.html",
        "https://powertrack4.aptaracorp.com/AptaraVendorAPI/vendorWorkflow.html"
      ],
      "js": [
        "src/utils/utils.js",
        "src/services/apiService.js",
        "src/managers/tableManager.js",
        "src/managers/filterManager.js",
        "src/managers/copyManager.js",
        "src/managers/toastManager.js",
        "src/managers/statsManager.js",
        "src/managers/pastDueManager.js",
        "src/services/notificationService.js",
        "src/ui/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "34": "icons/logo-34.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "34": "icons/logo-34.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}

